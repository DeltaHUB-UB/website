{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://deltahub.example/schemas/workshops.schema.json",
    "title": "Workshops",
    "description": "Array of workshop and event entries.",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "id": {
                "type": "integer",
                "description": "Unique numeric identifier"
            },
            "title": {
                "type": "string",
                "minLength": 3
            },
            "date": {
                "type": "string",
                "description": "Date in YYYY-MM-DD format",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            },
            "location": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "description_file": {
                "type": "string",
                "description": "Path to a Markdown file (e.g., content/workshops/2025-01-event.md)",
                "pattern": "^.+\\.md$"
            },
            "registration_link": {
                "type": "string",
                "format": "uri"
            },
            "materials_link": {
                "type": "string",
                "format": "uri"
            }
        },
        "required": [
            "title",
            "date"
        ]
    }
}