{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Team Members",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "team": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "position": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "description_file": {
                        "type": "string"
                    },
                    "photo": {
                        "type": "string"
                    },
                    "linkedin": {
                        "type": "string",
                        "format": "uri"
                    },
                    "researchgate": {
                        "type": "string",
                        "format": "uri"
                    },
                    "website": {
                        "type": "string",
                        "format": "uri"
                    },
                    "email": {
                        "type": "string"
                    }
                },
                "additionalProperties": true
            }
        }
    },
    "required": [
        "team"
    ],
    "additionalProperties": false
}