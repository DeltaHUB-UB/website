{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://deltahub.example/schemas/consortium.schema.json",
    "title": "Consortium Partners",
    "description": "Array of partner organizations.",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "name": {
                "type": "string",
                "minLength": 2
            },
            "country": {
                "type": "string",
                "minLength": 2
            },
            "role": {
                "type": "string",
                "minLength": 2
            },
            "description": {
                "type": "string"
            },
            "description_file": {
                "type": "string",
                "description": "Path to a Markdown file (e.g., content/consortium/partner-x.md)",
                "pattern": "^.+\\.md$"
            },
            "website": {
                "type": "string",
                "format": "uri"
            }
        },
        "required": [
            "name",
            "country",
            "role"
        ]
    }
}