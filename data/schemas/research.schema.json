{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://deltahub.example/schemas/research.schema.json",
    "title": "Research Outputs",
    "description": "Array of research items such as publications, reports, datasets.",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "id": {
                "type": "integer"
            },
            "type": {
                "type": "string",
                "enum": [
                    "publication",
                    "report",
                    "dataset",
                    "other"
                ]
            },
            "title": {
                "type": "string",
                "minLength": 3
            },
            "description": {
                "type": "string"
            },
            "description_file": {
                "type": "string",
                "description": "Path to a Markdown file (e.g., content/research/abc.md)",
                "pattern": "^.+\\.md$"
            },
            "date": {
                "type": "string",
                "description": "Date in YYYY-MM-DD format",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            },
            "authors": {
                "type": "string"
            },
            "url": {
                "type": "string",
                "format": "uri"
            },
            "download_url": {
                "type": "string",
                "format": "uri"
            }
        },
        "required": [
            "type",
            "title",
            "date"
        ],
        "anyOf": [
            {
                "required": [
                    "description"
                ]
            },
            {
                "required": [
                    "description_file"
                ]
            },
            {
                "required": [
                    "url"
                ]
            }
        ]
    }
}