{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://deltahub.example/schemas/news.schema.json",
    "title": "News Items",
    "description": "Array of news items displayed across the site.",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "id": {
                "type": "integer",
                "description": "Unique numeric identifier"
            },
            "title": {
                "type": "string",
                "minLength": 3
            },
            "content": {
                "type": "string",
                "minLength": 3
            },
            "content_file": {
                "type": "string",
                "description": "Path to a Markdown file (e.g., content/news/my-post.md)",
                "pattern": "^.+\\.md$"
            },
            "date": {
                "type": "string",
                "description": "Date in YYYY-MM-DD format",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            },
            "author": {
                "type": "string",
                "minLength": 1
            }
        },
        "required": [
            "title",
            "date",
            "author"
        ],
        "oneOf": [
            {
                "required": [
                    "content"
                ]
            },
            {
                "required": [
                    "content_file"
                ]
            }
        ]
    }
}